{
  "commit-msg": {
    "enabled": false,
    "actions": [
      {
        "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Beams",
        "options": []
      }
    ]
  },
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "./vendor/bin/php-cs-fixer fix"
      },
      {
        "action": "./vendor/bin/phpstan analyse --level=7 lib"
      }
    ]
  },
  "pre-push": {
    "enabled": true,
    "actions": [
      {
        "action": "./vendor/bin/phpunit"
      }
    ]
  }
}
