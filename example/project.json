            "tasks": {
                "composer.json": {
                    "type": "json_file",
                    "args": {
                        "targetPath": "composer.json",
                        "data": {
                            "require-dev": {
                                "phpunit/phpunit": "^7.0"
                            }
                        }
                    }
                },
                "composer install": {
                    "type": "script",
                    "args": {
                        "script": "composer install"
                    },
                    "depends": [ "composer.json" ]
