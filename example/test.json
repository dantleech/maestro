{
    "vars": {
        "php_versions": [ 7.1, 7.2, 7.3 ],
        "phpstan_level": 7
    },
    "env": {
        "FOOBAR": "BARFOO"
    },
    "prototypes": {
        "phpactor": {
            "url": "git@github.com:$PACKAGE_NAME",
            "tasks": {
                "survey": {
                    "type": "survey",
                    "tags": ["checkout"]
                },
                "init": {
                    "type": "null",
                    "depends": ["composer install"]
                },
                "readme": {
                    "type": "template",
                    "args": {
                        "path": "template/README.md.twig",
                        "targetPath": "README.md"
                    },
                    "depends": ["composer install"]
                },
                "qa": {
                    "type": "null",
                    "depends": ["phpunit", "phpstan", "php-cs-fixer"]
                },
                "composer install": {
                    "type": "script",
                    "args": {
                        "script": "composer install"
                    },
                    "depends": []
                },
                "phpunit": {
                    "type": "script",
                    "args": {
                        "script": "./vendor/bin/phpunit"
                    },
                    "depends": ["composer install"]
                },
                "php-cs-fixer": {
                    "type": "script",
                    "args": {
                        "script": "./vendor/bin/php-cs-fixer fix lib --dry-run"
                    },
                    "depends": ["composer install"]
                },
                "phpstan": {
                    "type": "script",
                    "args": {
                        "script": "./vendor/bin/phpstan analyse"
                    },
                    "depends": ["composer install"]
                }
            }
        }
    },
    "packages": {
        "phpactor/config-loader": {
            "version": "1.3.0",
            "vars": {
                "title": "Config Loader"
            },
            "prototype": "phpactor"
        },
        "phpactor/code-transform": {
            "version": "3.2.0",
            "vars": {
                "title": "Code Transform"
            },
            "prototype": "phpactor"
        },
        "phpactor/worse-reflection": {
            "version": "1.2.0",
            "vars": {
                "title": "Worse Reflection"
            },
            "prototype": "phpactor",
            "tasks": {
                "cats?": {
                    "type": "script",
                    "args": {
                        "script": "echo Cats"
                    }
                },
                "testing": {
                    "type": "null"
                },
                "templates": {
                    "type": "null"
                }
            }
        },
        "phpactor/code-builder": {
            "vars": {
                "title": "Code Builder"
            },
            "prototype": "phpactor"
        },
        "phpactor/language-server": {
            "vars": {
                "title": "Language ServerCode Builder"
            },
            "prototype": "phpactor"
        },
        "phpactor/language-server-extension": {
            "vars": {
                "title": "Language ServerCode Extension"
            },
            "prototype": "phpactor"
        },
        "phpactor/path-finder": {
            "vars": {
                "title": "Path Finder"
            },
            "prototype": "phpactor"
        }
    }
}
