{
    "vars": {
        "animal": "cow",
        "greeting": "moo"
    },
    "nodes": {
        "maestrophp/example-math": {
            "vars": {
                "version": "1.0.0"
            },
            "prototype": "example"
        },
        "maestrophp/example-science": {
            "vars": {
                "version": "0.1.0"
            },
            "prototype": "example"
        }
    },
    "prototypes": {
        "example": {
            "type": "vcsWorkspace",
            "args": {
                "name": "%_name%",
                "url": "https://github.com/$PACKAGE_NAME"
            },
            "vars": {
                "package": "%_name%"
            },
            "nodes": {
                "package": {
                    "type": "package",
                    "args": {
                        "name": "%package%",
                        "version": "%version%"
                    },
                    "nodes": {
                        "readme": {
                            "type": "template",
                            "args": {
                                "path": "templates/readme.md.twig",
                                "targetPath": "README.md"
                            }
                        },
                        "tag": {
                            "type": "tag",
                            "args": {
                                "tag": "%version%"
                            },
                            "depends": ["readme"]
                        },
                        "survey": {
                            "type": "survey",
                            "depends": ["tag"]
                        }
                    }
                }
            }
        }
    }
}


