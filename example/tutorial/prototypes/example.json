{
    "name": "example",
    "type": "package",
    "args": {
        "url": "https://github.com/$PACKAGE_NAME"
    },
    "nodes": {
        "readme": {
            "type": "template",
            "args": {
                "path": "templates/readme.md.twig",
                "targetPath": "README.md"
            }
        },
        "tag": {
            "type": "tag",
            "depends": ["readme"]
        },
        "survey": {
            "type": "survey",
            "depends": ["tag"]
        }
    }
}
