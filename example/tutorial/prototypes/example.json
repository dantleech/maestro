{
    "name": "example",
    "type": "vcsWorkspace",
    "args": {
        "name": "%_name%",
        "url": "https://github.com/$PACKAGE_NAME",
        "update": false
    },
    "vars": {
        "package": "%_name%"
    },
    "nodes": {
        "package": {
            "type": "package",
            "args": {
                "name": "%package%"
            },
            "nodes": {
                "readme": {
                    "type": "template",
                    "args": {
                        "path": "templates/readme.md.twig",
                        "targetPath": "README.md"
                    }
                },
                "tag": {
                    "type": "tag",
                    "depends": ["readme"]
                },
                "survey": {
                    "type": "survey",
                    "depends": ["tag"]
                }
            }
        }
    }
}
